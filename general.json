{
  "extends": ["config:base"],
  "labels": ["dependency"],
  "unicodeEmoji": true,
  "semanticCommitType": "deps",
  "semanticCommits": "enabled",
  "ignoreDeprecated": true,
  "ignoreNpmrcFile": true,
  "includeForks": false,
  "prCreation": "not-pending",
  "prFooter": "",
  "draftPR": false,
  "branchPrefix": "deps/",
  "additionalBranchPrefix": "",
  "commitBody": "Generated by Renovate",
  "commitBodyTable": true,
  "schedule": ["every weekend"],
  "timezone": "Asia/Hong_Kong",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Available dependency upgrades",
  "dependencyDashboardFooter": "- [ ] <!-- manual job -->Check this box to trigger a request for Renovate to run again on this repository",
  "dependencyDashboardApproval": true,
  "dependencyDashboardAutoclose": false,
  "prBodyDefinitions": {
    "Package": "`{{{lookupName}}}`"
  },
  "prBodyColumns": [
    "Package",
    "Update",
    "Type",
    "New value",
    "Package file",
    "References"
  ],
  "enabledManagers": [
    "ansible",
    "docker-compose",
    "dockerfile",
    "github-actions",
    "gitlabci",
    "gitlabci-include",
    "nuget",
    "gomod",
    "gradle",
    "maven",
    "npm",
    "pip_setup",
    "pipenv",
    "cargo",
    "cdnurl",
    "git-submodules",
    "gradle-wrapper",
    "regex",
    "sbt"
  ],
  "regexManagers": [
    {
      "fileMatch": [".+\\.mk$", "Makefile$"],
      "matchStrings": ["\\s+(?<repoName>.*?):(?<currentValue>.*?)\\s+"],
      "depNameTemplate": "{{{repoName}}}",
      "lookupNameTemplate": "{{{repoName}}}",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "fileMatch": ["\\.pre-commit-config\\.yaml$"],
      "matchStrings": [
        "- repo:\\s+(?<repoURL>.*?)\\s+rev:\\s+(?<currentValue>.*?)"
      ],
      "depNameTemplate": "{{{repoURL}}}",
      "lookupNameTemplate": "{{{repoURL}}}",
      "datasourceTemplate": "git-tags",
      "versioningTemplate": "semver"
    }
  ]
}
